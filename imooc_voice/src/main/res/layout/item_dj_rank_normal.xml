<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/tv_item_dj_rank_rank"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="bottom|center_horizontal"
        android:text="1"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_item_dj_diff"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_dj_rank_rank"
        android:layout_alignLeft="@+id/tv_item_dj_rank_rank"
        android:layout_alignTop="@+id/tv_item_dj_rank_diff"
        android:layout_alignBottom="@+id/tv_item_dj_rank_diff"
        android:layout_marginLeft="5dp"
        android:src="@drawable/zero"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_item_dj_rank_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_dj_rank_rank"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="-3dp"
        android:layout_toRightOf="@+id/iv_item_dj_diff"
        android:gravity="center"
        android:text="1"
        android:textSize="9sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_item_dj_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_item_dj_rank_rank"
        android:src="@drawable/test" />

    <ImageView
        android:id="@+id/iv_item_dj_tag"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignRight="@+id/iv_item_dj_avatar"
        android:layout_alignBottom="@+id/iv_item_dj_avatar"
        android:src="@drawable/guanfang"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_item_dj_rank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@+id/iv_item_dj_avatar"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="xxxxx"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_item_dj_rank_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="10ä¸‡"
        android:textSize="11sp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_item_dj_rank_score"
        android:src="@drawable/rankhot" />
</RelativeLayout>