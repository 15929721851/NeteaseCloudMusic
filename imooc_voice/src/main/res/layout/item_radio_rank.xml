<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/iv_item_radio_diff"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_radio_rank_diff"
        android:layout_alignLeft="@+id/tv_item_radio_rank_rank"
        android:layout_alignTop="@+id/tv_item_radio_rank_diff"
        android:layout_below="@+id/tv_item_radio_rank_rank"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/ic_diff_none"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_item_radio_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_item_radio_rank_rank"
        android:src="@drawable/ic_test" />

    <ImageView
        android:id="@+id/iv_radio_hot_tag"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignLeft="@+id/tv_item_radio_name"
        android:layout_below="@+id/iv_item_radio_rank_djname"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_rank_hot" />

    <TextView
        android:id="@+id/tv_item_radio_rank_rank"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="1"
        android:textSize="22sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_item_radio_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@+id/iv_item_radio_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="xxxxx"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/iv_item_radio_rank_djname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_radio_name"
        android:layout_below="@+id/tv_item_radio_name"
        android:gravity="top"
        android:text="xxxx"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_item_radio_rank_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_radio_rank_rank"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="-3dp"
        android:layout_toRightOf="@+id/iv_item_radio_diff"
        android:gravity="center"
        android:text="1"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/iv_item_radio_rank_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_item_radio_rank_djname"
        android:layout_toRightOf="@+id/iv_radio_hot_tag"
        android:gravity="top"
        android:text="xxxx"
        android:textSize="13sp" />


</RelativeLayout>